# ============================================
# QuoteVault Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ============================================

# --------------------------------------------
# SUPABASE CONFIGURATION (REQUIRED)
# --------------------------------------------
# Get these from your Supabase project dashboard:
# https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# --------------------------------------------
# APP CONFIGURATION
# --------------------------------------------
EXPO_PUBLIC_APP_NAME=QuoteVault
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENV=development

# --------------------------------------------
# FEATURE FLAGS
# --------------------------------------------
EXPO_PUBLIC_ENABLE_GOOGLE_AUTH=true
EXPO_PUBLIC_ENABLE_APPLE_AUTH=false
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# --------------------------------------------
# API CONFIGURATION
# --------------------------------------------
EXPO_PUBLIC_DEFAULT_PAGE_SIZE=20
EXPO_PUBLIC_QOTD_REFRESH_HOUR=0

# --------------------------------------------
# NOTIFICATION CONFIGURATION
# --------------------------------------------
EXPO_PUBLIC_DEFAULT_NOTIFICATION_TIME=09:00
